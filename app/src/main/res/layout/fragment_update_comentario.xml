<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.comentario.update_comentario">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textView25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Actualizar Comentario"
            android:textColor="#000000"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/text_update_id_comentario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID del Comentario" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/text_update_id_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID del Usuario" />

        <EditText
            android:id="@+id/text_update_entidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Entidad" />

        <EditText
            android:id="@+id/text_update_id_entidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID de la Entidad" />

        <EditText
            android:id="@+id/text_update_contenido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contenido" />

        <EditText
            android:id="@+id/text_update_fecha_hora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha y Hora" />

        <Button
            android:id="@+id/btn_update_comentario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Actualizar Comentario" />

    </LinearLayout>


</FrameLayout>