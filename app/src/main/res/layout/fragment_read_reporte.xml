<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.reporte.read_reporte">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/text_read_id_reporte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID Reporte" />

        <EditText
            android:id="@+id/text_read_id_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID Usuario"
            android:enabled="false" />

        <EditText
            android:id="@+id/text_read_ubicacion_evento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ubicación del Evento"
            android:enabled="false" />

        <EditText
            android:id="@+id/text_read_tipo_evento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tipo de Evento"
            android:enabled="false" />

        <EditText
            android:id="@+id/text_read_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descripción"
            android:enabled="false" />

        <EditText
            android:id="@+id/text_read_fecha_hora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha y Hora"
            android:enabled="false" />

        <EditText
            android:id="@+id/text_read_estado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Estado"
            android:enabled="false" />

        <Button
            android:id="@+id/btn_read_reporte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buscar Reporte" />
    </LinearLayout>

</FrameLayout>